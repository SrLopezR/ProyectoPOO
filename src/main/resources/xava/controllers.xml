<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<!-- 
Controllers doc: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_en.html

Default controllers included in OpenXava (you can extend from them):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Examples of controllers (from test application):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controllers>

    <!-- ═══════════════════════════════════════════ -->
    <!-- CONTROLADOR PARA CONTRATOS -->
    <!-- ═══════════════════════════════════════════ -->
    <controller name="ContratoController">
        <extends controller="Typical"/>

        <!-- Acción personalizada para guardar con validaciones -->
        <action name="save"
                mode="detail"
                by-default="if-possible"
                class="org.example.Proyecto.actions.GuardarContratoAction"
                icon="content-save"
                keystroke="Control S">
        </action>

        <!-- Generar programación automática de servicios -->
        <action name="generarProgramacion"
                mode="detail"
                class="org.example.Proyecto.actions.GenerarProgramacionAction"
                icon="calendar-plus"
                >
        </action>

        <!-- Renovar contrato automáticamente -->
        <action name="renovarContrato"
                mode="detail"
                class="org.example.Proyecto.actions.RenovarContratoAction"
                icon="autorenew"
                >
        </action>
    </controller>

    <!-- ═══════════════════════════════════════════ -->
    <!-- CONTROLADOR PARA PROGRAMACIÓN DE SERVICIOS -->
    <!-- ═══════════════════════════════════════════ -->
    <controller name="ProgramacionController">
        <extends controller="Typical"/>

        <!-- Marcar servicio como completado -->
        <action name="completarServicio"
                mode="detail"
                class="org.example.Proyecto.actions.CompletarServicioAction"
                icon="check-circle"
                >
        </action>

        <!-- Cancelar servicio con motivo -->
        <action name="cancelarServicio"
                mode="detail"
                class="org.example.Proyecto.actions.CancelarServicioAction"
                icon="cancel"
                >
        </action>

        <!-- Registrar uso de productos -->
        <action name="registrarProductos"
                mode="detail"
                class="org.example.Proyecto.actions.RegistrarProductosAction"
                icon="package-variant"
                >
        </action>
    </controller>

    <!-- ═══════════════════════════════════════════ -->
    <!-- CONTROLADOR PARA INVENTARIO -->
    <!-- ═══════════════════════════════════════════ -->
    <controller name="InventarioController">
        <extends controller="Typical"/>

        <!-- Alertar stock bajo -->
        <action name="alertarStockBajo"
                mode="list"
                class="org.example.Proyecto.actions.AlertarStockBajoAction"
                icon="alert"
                >
        </action>

        <!-- Realizar inventario físico -->
        <action name="ajustarInventario"
                mode="detail"
                class="org.example.Proyecto.actions.AjustarInventarioAction"
                icon="clipboard-check"
                >
        </action>
    </controller>
    
</controllers>
